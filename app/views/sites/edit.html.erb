<% @heading = "Edit Baseline Process: #{@site.title}" if @site.baseline_process? %>
<% @heading = "Edit Wiki: #{@site.title}" if @site.wiki? %>
<% @overview = raw "Use the form below to update properties of #{link_to_site(@site)}" %>

<%= error_messages_for @site %>

<div class="styled-form">
<%= form_for(@site, :as => :site, :url => {:controller => 'sites', :action => 'edit'}) do |f| %>
	<div class="form-row"><%= f.label :title %><%= f.text_field :title %></div>
    <div class="form-row"><%= f.label :folder %><%= f.text_field :folder %></div>
    <div class="form-row"><%= f.label :description %><%= f.text_area :description, :cols => 60, :rows => 8 %></div>
    <div class="form-row"><%= f.submit %></div>
<% end %>
</div>
